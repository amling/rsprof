#!/usr/bin/perl

$| = 1;

use strict;
use warnings;

use JSON::Syck;

my $name = undef;
my @stack;
while(<>) {
    chomp;
    if(/^"(.*)"/) {
        $name = $1;
    }
    if(/^	(.*)$/) {
        my $elt = $1;
        if($elt =~ /at (.*)\((.*)\)/)
        {
            my $meth = $1;
            my $src = $2;

            if($src =~ /:([0-9+])$/) {
                $meth = "$meth:L$1";
            }

            push @stack, $meth;
        }
    }
    if(/^$/) {
        flush();
    }
}
flush();

sub flush {
    if(defined($name)) {
        @stack = reverse @stack;
        my $r = {
            'name' => $name,
            'path' => join("/", @stack),
        };
        print JSON::Syck::Dump($r) . "\n";
        @stack = ();
        $name = undef;
    }
}
